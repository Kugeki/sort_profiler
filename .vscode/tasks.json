{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "gnuplot",
            "type": "process",
            "command": "gnuplot",
            "args": ["--persist", "${file}"],
            "problemMatcher": [],
            "presentation": {
                "reveal": "silent",
                "revealProblems": "onProblem",
                "close": true
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
        }
    ]
}